{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "composite": true,
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
